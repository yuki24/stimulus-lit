{
  "name": "stimulus-lit",
  "version": "0.2.0",
  "description": "HTML rendering with lit-html for Stimulus Controllers",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "unpkg": "dist/index.umd.js",
  "types": "dist/types/index.d.ts",
  "author": "Yuki Nishijima",
  "license": "MIT",
  "repository": "https://github.com/yuki24/stimulus-lit",
  "sideEffects": false,
  "files": [
    "dist/*.js",
    "dist/*.js.map",
    "dist/types/**/*"
  ],
  "scripts": {
    "build": "tsc --noEmit false --declaration true --emitDeclarationOnly true --outDir dist/types && rollup -c",
    "clean": "rimraf dist",
    "dev": "rollup -wc",
    "prebuild": "yarn clean",
    "prerelease": "yarn build",
    "prettier-project": "prettier --write '{src,test}/**/*.ts'",
    "prettier-write": "prettier --write",
    "release": "npm publish --access public",
    "start": "cd playground && yarn start",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "type-check": "tsc"
  },
  "peerDependencies": {
    "@hotwired/stimulus": ">=3",
    "lit-html": ">=2.4.0",
    "stimulus": ">=3"
  },
  "devDependencies": {
    "@hotwired/stimulus": ">=3",
    "@open-wc/testing": "^3.0.0-next.5",
    "@rollup/plugin-node-resolve": "^13.0.5",
    "@rollup/plugin-typescript": "^8.2.5",
    "@web/dev-server-esbuild": "^0.3.3",
    "@web/test-runner": "^0.15.0",
    "@web/test-runner-playwright": "^0.9.0",
    "lit-html": "^2.4.0",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-filesize": "^9.1.1",
    "sourcemap": "^0.1.0",
    "tslib": "^2.3.1",
    "typescript": "^4.8.4"
  },
  "prettier": {
    "printWidth": 120,
    "semi": false,
    "singleQuote": false,
    "trailingComma": "es5",
    "bracketSpacing": true
  }
}
